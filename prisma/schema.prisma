generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model View {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  videoId   String   @db.ObjectId
  createdAt DateTime @default(now())

  video      Video    @relation(fields: [videoId], references: [id])
}

model Video {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  thumbnail   String
  videoUrl    String
  duration    Int
  views       Int         @default(0)
  active      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // ðŸ‘‡ Relation to View
  viewLogs    View[]
}


model Ad {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  type      String // "pre-roll" | "mid-roll"
  vastUrl   String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}
